</section>

<script>
  // Vehicle filter
  function filterVehicles(type: string) {
    const cards = document.querySelectorAll('.vehicle-card') as NodeListOf<HTMLElement>;
    const btns = document.querySelectorAll('.filter-btn');

    btns.forEach(btn => {
      btn.classList.remove('bg-primary-700', 'text-white');
      btn.classList.add('bg-gray-100', 'text-gray-600');
    });

    const activeBtn = document.querySelector(`[data-filter="${type}"]`);
    activeBtn?.classList.add('bg-primary-700', 'text-white');
    activeBtn?.classList.remove('bg-gray-100', 'text-gray-600');

    cards.forEach(card => {
      if (type === 'all' || card.dataset.type === type) {
        card.style.display = 'block';
        card.style.animation = 'fadeIn 0.5s ease forwards';
      } else {
        card.style.display = 'none';
      }
    });
  }

  // Attach click events to filter buttons
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = (btn as HTMLElement).dataset.filter;
      if (filter) filterVehicles(filter);
    });
  });
</script>
