---
const testimonials = [
  {
    text: '"Pelayanan sangat memuaskan! Mobilnya bersih, wangi, dan tepat waktu. Pasti sewa lagi di sini. Recommended banget!"',
    name: "Ahmad Fauzi",
    role: "Pengusaha",
    initial: "A",
    gradient: "from-primary-400 to-primary-600"
  },
  {
    text: '"Sewa Innova buat liburan keluarga ke Bali. Kondisi kendaraan prima, AC dingin, sangat nyaman di perjalanan. Terima kasih RentGo!"',
    name: "Siti Nurhaliza",
    role: "Ibu Rumah Tangga",
    initial: "S",
    gradient: "from-primary-300 to-primary-500"
  },
  {
    text: '"Sewa ELF untuk acara kantor. Sopirnya ramah dan profesional. Proses booking lewat WhatsApp sangat cepat dan mudah!"',
    name: "Budi Santoso",
    role: "Karyawan Swasta",
    initial: "B",
    gradient: "from-primary-500 to-primary-700"
  },
  {
    text: '"Pajero Sport-nya gagah dan nyaman banget buat road trip ke Bromo. Mesinnya bertenaga, AC adem. Puas banget, next pasti sewa lagi!"',
    name: "Rizky Pratama",
    role: "Traveler",
    initial: "R",
    gradient: "from-amber-400 to-amber-600"
  },
  {
    text: '"Avanza-nya bersih dan terawat. Harga terjangkau, cocok buat mahasiswa yang mau liburan bareng teman-teman. Booking gampang banget via WA!"',
    name: "Dewi Anggraini",
    role: "Mahasiswa",
    initial: "D",
    gradient: "from-teal-400 to-teal-600"
  },
  {
    text: '"Sudah 3 kali sewa Brio di RentGo buat keperluan dinas. Selalu on time, mobilnya wangi, dan harga paling bersaing. Langganan deh!"',
    name: "Hendra Wijaya",
    role: "PNS",
    initial: "H",
    gradient: "from-indigo-400 to-indigo-600"
  }
];

const starSvg = '<svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>';

// Duplicate for seamless loop
const allTestimonials = [...testimonials, ...testimonials];
---

<section id="testimoni" class="py-14 sm:py-24 hero-gradient relative overflow-hidden">
  <div class="absolute inset-0">
    <div class="absolute top-20 right-20 w-72 h-72 bg-primary-400/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-10 left-10 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl"></div>
  </div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-10 sm:mb-16 section-fade">
      <h2 class="text-2xl sm:text-4xl lg:text-5xl font-black text-white mb-3 sm:mb-4">Testimoni <span class="text-primary-300">Pelanggan</span></h2>
      <p class="text-primary-100/70 max-w-2xl mx-auto text-sm sm:text-lg">Apa kata pelanggan yang sudah menggunakan layanan kami.</p>
    </div>
    <div class="marquee-wrapper overflow-hidden">
      <div class="marquee-track gap-4 sm:gap-6">
        {allTestimonials.map((t) => (
          <div class="glass rounded-2xl sm:rounded-3xl p-5 sm:p-8 flex-shrink-0 w-[280px] sm:w-[380px]">
            <div class="flex gap-1 mb-3 sm:mb-4">
              <Fragment set:html={starSvg} />
              <Fragment set:html={starSvg} />
              <Fragment set:html={starSvg} />
              <Fragment set:html={starSvg} />
              <Fragment set:html={starSvg} />
            </div>
            <p class="text-primary-100/80 text-xs sm:text-sm leading-relaxed mb-4 sm:mb-6">{t.text}</p>
            <div class="flex items-center gap-3">
              <div class={`w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br ${t.gradient} rounded-full flex items-center justify-center text-white font-bold text-base sm:text-lg`}>{t.initial}</div>
              <div>
                <div class="text-white font-semibold text-sm sm:text-base">{t.name}</div>
                <div class="text-primary-200/60 text-sm">{t.role}</div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
