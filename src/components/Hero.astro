<section id="beranda" class="min-h-screen flex items-center relative overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img src="/background.webp" alt="Armada Kendaraan Rental" class="w-full h-full object-cover object-center" />
  </div>
  <!-- Dark Overlay with Green Tint -->
  <div class="absolute inset-0 bg-gradient-to-b from-primary-950/80 via-primary-950/70 to-primary-950/90"></div>
  <!-- Extra subtle overlay for readability -->
  <div class="absolute inset-0 bg-black/30"></div>

  <div class="max-w-5xl mx-auto px-5 sm:px-6 lg:px-8 relative z-10 w-full text-center">
    <div class="fade-in" style="animation-delay: 0.2s;">
      <h1 class="text-3xl sm:text-5xl lg:text-7xl font-black text-white leading-tight mb-4 sm:mb-6">
        Rental Kendaraan<br/>
